    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@types/graphql": "^14.5.0",
    "@types/jest": "24.0.13",
    "@types/node": "12.0.2",
